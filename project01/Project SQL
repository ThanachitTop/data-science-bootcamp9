-- create custoemrs -- 
create table customers (
  customerid TEXT PRIMARY Key,
  customer_name TEXT,
  region TEXT,
  dob 'YYYY-MM-DD',
  phone TEXT,
  gender TEXT 
  );
  
-- create menu -- 
create table menus (
  menuid TEXT primary KEY,
  menu_name TEXT,
  price integer
  );
  
-- create riders  --
create table riders (
  riderid TEXT primary key,
  rider_brand TEXT
  );
  
 -- create employees -- 
 create table employees (
   employeeid TEXT primary key,
   employee_name TEXT ,
   dob_em 'YYYY-MM-DD'
   );
   
 -- create payments --
 create table payments (
   paymentid TEXT primary key,
   payment_name TEXT
   );
   
 -- create orders -- 
 create table orders (
   orderid TEXT primary Key,
   customerid TEXT, 
   menuid TEXT,
   riderid TEXT,
   employeeid TEXT, 
   day 'YYYY-MM-DD'
   );
